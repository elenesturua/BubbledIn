# Firebase Environment Configuration Template
# Copy this file to .env and replace with your actual Firebase project credentials

VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id_here
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here
VITE_FIREBASE_APP_ID=your_app_id_here
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id_here

# Gemini API Key (for AI summaries)
# Get from: https://makersuite.google.com/app/apikey
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# Firebase Cloud Functions URL (after deployment)
# Will look like: https://us-central1-YOUR-PROJECT-ID.cloudfunctions.net
VITE_FIREBASE_FUNCTION_URL=https://YOUR-REGION-YOUR-PROJECT-ID.cloudfunctions.net
